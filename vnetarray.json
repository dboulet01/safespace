{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vnets": {
            "type": "array",
            "metadata": {
                "description": "Array of Vnets to create"
            }
        }
    },
    "variables": {
        "copy": [
            {
                "name": "resourceId",
                "count": "[length(parameters('vnets'))]",
                "input": "[resourceId('Microsoft.Network/virtualNetworks',parameters('vnets')[copyIndex('resourceId')].Name)]",
                "dependsOn": ["[parameters('vnets')[copyIndex('resourceId')].Name]"]
            }
        ]
    },
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2018-11-01",
            "name": "[parameters('vnets')[copyIndex()].Name]",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": "[parameters('vnets')[copyIndex()].addressPrefixes]"
                },
                "subnets": "[parameters('vnets')[copyIndex()].subnets]"
            },
            "copy": {
                "name": "vnetLoop",
                "count": "[length(parameters('vnets'))]"
            }
        }
    ],
    "outputs": {
        "resourceId": {
            "type": "string",
            "value": "[string(variables('resourceId'))]"
        }
    }
}